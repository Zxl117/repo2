<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="355dp"
          android:background="#4FC3F7">

          <LinearLayout
              android:id="@+id/ll_star"
              android:layout_width="270dp"
              android:layout_height="95dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="80dp"
              android:background="@mipmap/star_bg"
              android:gravity="bottom|center_horizontal"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/ivStar1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="10dp"
                  android:src="@mipmap/small_no_star" />

              <ImageView
                  android:id="@+id/ivStar2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/big_no_star" />

              <ImageView
                  android:id="@+id/ivStar3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="10dp"
                  android:src="@mipmap/small_no_star" />

          </LinearLayout>
          <TextView
              android:id="@+id/tvResult"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ll_star"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:drawableEnd="@mipmap/icon_help"
              android:drawablePadding="5dp"
              android:gravity="center_vertical"
              android:text="安全等级"
              android:textColor="#fff"
              android:textSize="16sp" />

          <LinearLayout
              android:id="@+id/ll_above"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal">


              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">


                  <TextView
                      android:id="@+id/tv_LeijiDose"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="0.24"
                      android:textColor="#fff"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      style="@style/Font_Nomal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="平均剂量率(uSv/h)"
                      android:textColor="#fff"
                      android:textSize="13sp" />


              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">


                  <TextView
                      android:id="@+id/id_time"
                      style="@style/Font_18"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="1"
                      android:textColor="#fff"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      style="@style/Font_Nomal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="辐射安全等级"
                      android:textColor="#fff"
                      android:textSize="13sp" />


              </LinearLayout>


              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">


                  <TextView
                      android:id="@+id/tv_MaxDoseRate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0.19"
                      android:textColor=" #fff"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      style="@style/Font_Nomal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="最大剂量率(uSv/h)"
                      android:textColor=" #fff"
                      android:textSize="13sp" />


              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:id="@+id/ll_bottom"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_above="@+id/ll_above"

              android:orientation="horizontal">

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">

                  <TextView
                      android:id="@+id/tvDistancet"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:ellipsize="end"
                      android:maxLength="6"
                      android:text="0.00"
                      android:textColor="#FFF"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tvDistancet"
                      android:layout_centerHorizontal="true"
                      android:text="公里"
                      android:textColor="#FFF"
                      android:textSize="13sp" />
              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">

                  <TextView
                      android:id="@+id/tvDuration"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:ellipsize="end"
                      android:text="00:00:00"
                      android:textColor="#FFF"
                      android:textSize="24sp"
                      android:textStyle="bold" />

              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">

                  <TextView
                      android:id="@+id/tvCalorie"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:ellipsize="end"
                      android:maxLength="6"
                      android:text="0"
                      android:textColor="#FFF"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tvCalorie"
                      android:layout_centerHorizontal="true"
                      android:text="累计剂量"
                      android:textColor="#FFF"
                      android:textSize="13sp" />

              </RelativeLayout>

          </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">

          <com.baidu.mapapi.map.MapView
              android:id="@+id/mapView"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

          <LinearLayout
              android:id="@+id/ll_details"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentEnd="true"
              android:layout_margin="6dp"
              android:background="@drawable/et_coner_white_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="4dp">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="4dp"
                  android:src="@mipmap/sport_mark" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=">>>"
                  android:textColor="#49B557"
                  android:textSize="20sp" />

          </LinearLayout>
      </RelativeLayout>
  </LinearLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="49dp"
              android:layout_marginTop="0dp">

              <RelativeLayout
                  android:id="@+id/re_back"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:onClick="back">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="0dp"
                          android:background="@mipmap/icon_back_white" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:text="返回"
                          android:textColor="#FFFFFF"
                          android:textSize="14sp" />
                  </LinearLayout>
              </RelativeLayout>

              <LinearLayout
                  android:id="@+id/ll_share"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="10dp"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="分享"
                      android:textColor="#FFF"
                      android:textSize="16sp" />

              </LinearLayout>
          </RelativeLayout>

      </RelativeLayout>










