<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/lay_title" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/huanbao">

    </ImageView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/shouji" />


        <EditText

            android:id="@+id/et_phone"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/Line_Height"
            android:layout_weight="1"
            android:background="@color/White"
            android:hint="请输入手机号"
            android:singleLine="true"

            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/Line" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/et_rpwd"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/Line_Height"
            android:layout_weight="1"
            android:background="@color/White"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/yanzhengma" />

        <EditText

            android:id="@+id/etCode"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/Line_Height"
            android:layout_weight="1"
            android:background="@color/White"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/Line" />

        <TextView
            android:id="@+id/tvCode"
            style="@style/Font_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="@color/APP_P"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/ck_is"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rb_selector"
            android:button="@null" />

        <TextView
            style="@style/Font_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我已阅读并同意">

        </TextView>

        <TextView
            android:id="@+id/tv_xieyi"
            style="@style/Font_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textColor="@color/APP_P">

        </TextView>


    </LinearLayout>


    <Button

        android:id="@+id/btnVerify"
        style="@style/Font_Btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_Height"
        android:layout_margin="20dp"
        android:background="@drawable/btn_round_blue_bg"
        android:text="完成注册" />


</LinearLayout>