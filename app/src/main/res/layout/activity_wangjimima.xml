<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/lay_title"/>

    <LinearLayout

        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/shouji"
            />


        <EditText
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:id="@+id/et_phone"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Line_Height"
            android:background="@color/White"
            android:hint="请输入手机号"
            />














    </LinearLayout>





    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Line"/>



    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/yanzhengma"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/et_yanzhengma"
            android:singleLine="true"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Line_Height"
            android:background="@color/White"
            android:hint="请输入验证码"
            />

        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/Line"/>

        <TextView
            android:id="@+id/tv_getv"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            style="@style/Font_15"
            android:textColor="@color/APP_P"/>

    </LinearLayout>

    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Line"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mima"
            />


        <EditText
            android:inputType="textPassword"
            android:singleLine="true"
            android:id="@+id/et_pwd"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Line_Height"
            android:background="@color/White"
            android:hint="设置8～20位密码，建议数字+字母组合"
            />













    </LinearLayout>





    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Line"/>







    <LinearLayout

        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mima"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_rpwd"
            android:singleLine="true"
            style="@style/Font_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Line_Height"
            android:background="@color/White"
            android:hint="请再次输入密码"
            />

    </LinearLayout>

    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Line"/>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    </LinearLayout>





















    <Button

        android:id="@+id/btn_zhuce"
        android:layout_margin="20dp"
        android:text="确定"
        style="@style/Font_Btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_Height"
        android:background="@drawable/btn_round_blue_bg"/>













</LinearLayout>