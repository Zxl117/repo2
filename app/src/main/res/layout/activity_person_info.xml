<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".activity.PersonInfoActivity">


    <include layout="@layout/lay_title"/>




    <LinearLayout
        android:id="@+id/lay_info"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/Padding_LR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/touxiang"/>

       <LinearLayout
           android:gravity="center_vertical"
           android:orientation="vertical"
           android:layout_marginLeft="@dimen/Padding_LR"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="100dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="XXXXX"
               style="@style/Font_18"
               android:textColor="@color/APP_P"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="账号：131xxxx1111"
               style="@style/Font_18"
               android:textColor="@color/APP_P"/>


       </LinearLayout>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"/>

    </LinearLayout>


    <View
        android:layout_margin="@dimen/Padding_LR"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/APP_P"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/lay_localdata"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/bendishuju"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Font_15"
                    android:textColor="@color/APP_P"
                    android:text="本地数据"/>


            </LinearLayout>





                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/yunshuju"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Font_15"
                        android:textColor="@color/APP_P"
                        android:text="云数据"/>


                </LinearLayout>




                    <LinearLayout
                        android:id="@+id/lay_shiyongshouce"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/shiyongshouce"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Font_15"
                            android:textColor="@color/APP_P"
                            android:text="使用手册"/>


                    </LinearLayout>


        </LinearLayout>




            <LinearLayout
                android:layout_marginTop="@dimen/Padding_LR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/lay_call"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/fuwudianhua"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Font_15"
                        android:textColor="@color/APP_P"
                        android:text="服务电话"/>


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/lay_yijianfankui"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/jianyifankui"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Font_15"
                        android:textColor="@color/APP_P"
                        android:text="建议反馈"/>


                </LinearLayout>




                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">





                </LinearLayout>


            </LinearLayout>






        </LinearLayout>










</LinearLayout>